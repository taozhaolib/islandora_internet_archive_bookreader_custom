    );
    
    $form['bookreader_custom_fieldset']['wrapper'][ISLANDORA_BOOKREADER_CUSTOM_SOCIAL_LINK_SHOW] = array(
        '#type' => 'radios',
        '#title' => t('Show the social links to the book and pages'),
